{
  "name": "rakshak-expense-management",
  "version": "1.0.0",
  "description": "Full Stack Expense Management System for Rakshak Securitas",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-server": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start": "cd backend && npm start",
    "heroku-postbuild": "npm run install-all && npm run build",
    "dev-single-port": "concurrently \"npm run server-single\" \"npm run client-single\"",
    "server-single": "cd backend && PORT=5001 npm run dev",
    "client-single": "cd frontend && PORT=3002 npm start",
    "dev:3002": "concurrently \"npm run server-single\" \"cd frontend && PORT=3002 npm start\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:start-backend": "pm2 start ecosystem.config.js --only expense-backend",
    "pm2:start-frontend": "pm2 start ecosystem.config.js --only expense-frontend",
    "test-notifications": "node test-notification-system.js"
  },
  "keywords": [
    "expense",
    "management",
    "react",
    "nodejs",
    "mongodb",
    "full-stack"
  ],
  "author": "ROBUSTRIX",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/rakshak-expense-management.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/rakshak-expense-management/issues"
  },
  "homepage": "https://github.com/your-username/rakshak-expense-management#readme",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.16.1",
    "nodemailer": "^7.0.5"
  }
}
